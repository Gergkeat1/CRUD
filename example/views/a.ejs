<%- contentFor('header') %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


<% /*
Content for the `body` section should either be the first thing defined
in the view, or it has to be declared just like any other section.
*/ %>
<%- contentFor('body') %>

<table class="table table-bordered" style="text-align: center;">
  <thead>
    <tr class="success">
      <th>Number</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Tel.</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% result.forEach(function(data) { %>
    <tr class="success" align="center">
      <td><%= data.id %></td>
      <td><%= data.fname %></td>
      <td><%= data.lname %></td>
      <td><%= data.age %></td>
      <td><%= data.tel %></td>
      <td>
        <a><img src="images/edit.png" width="30" height="30"></a>
        <a href="/delete?id=<%= data.id %>"><img src='images/delete.png' onclick="return confirm('Do you want to Delete ??')" width='30' height='30'></a>
      </td>
    </tr>
    <% }); %>
  </tbody>
  <tr>
    <td colspan="6"><a href="/" type="submit" class="btn btn-primary">Back</a></td>
  </tr>
</table>

<% /*
When style extraction is enabled, any custom styles that a page defines, will
be extracted out of the content and made available in the specific placeholder.
In our example, even though we're defining a <style> within the body, this will
be placed, according to our layout, inside of the <head> element.
<link> blocks to load external stylesheets are also extracted when the option
is enabled.
*/ %>

<style>
  .page-message {
    color: blue
  }
</style>

