<%- contentFor('header') %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


<% /*
Content for the `body` section should either be the first thing defined
in the view, or it has to be declared just like any other section.
*/ %>
<%- contentFor('body') %>
<form name="form1" method="GET" action="/update">
<table class="table table-bordered" widht="80%">
  <thead>
    <tr class="success">
      <th>Number</th>
      <th>Username</th>
      <th>Password</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Tel.</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      
      <td><input type="text" class="form-control" name="id" value="<%= id %>" disabled></td>
      <td><input type="text" class="form-control" name="username" value="<%= username %>"></td>
      <td><input type="text" class="form-control" name="password" value="<%= password %>"></td>
      <td><input type="text" class="form-control" name="fname" value="<%= fname %>"></td>
      <td><input type="text" class="form-control" name="lname" value="<%= lname %>"></td>
      <td><input type="text" class="form-control" name="age" value="<%= age %>"></td>
      <td><input type="text" class="form-control" name="tel" value="<%= tel %>"></td>
    </tr>
  </tbody>
  <tr>
    <td colspan="5"><button type="submit" name="update" value="<%= id %>" class="btn btn-primary">Update</button></td>
  </tr>
</table>
</form>

